<?xml version="1.0" encoding="utf-8"?>
<!-- 
  rn_edit_text_material.xml
  AI Talent Marketplace
  
  This drawable defines the visual appearance of EditText components
  in the React Native Android application. It provides consistent styling 
  for text input fields with different states (normal, focused, disabled).
  
  The styling is aligned with the application's design system to ensure
  a cohesive user experience across the platform.
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape>
            <stroke android:width="2dp" android:color="@color/primary" />
            <padding android:left="12dp" android:top="10dp" android:right="12dp" android:bottom="10dp" />
            <corners android:radius="8dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="1dp" android:color="#E0E0E0" />
            <padding android:left="12dp" android:top="10dp" android:right="12dp" android:bottom="10dp" />
            <corners android:radius="8dp" />
            <solid android:color="#F5F5F5" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/border" />
            <padding android:left="12dp" android:top="10dp" android:right="12dp" android:bottom="10dp" />
            <corners android:radius="8dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</selector>