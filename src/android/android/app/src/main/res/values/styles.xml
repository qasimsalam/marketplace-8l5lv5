<?xml version="1.0" encoding="utf-8"?>
<!--
  ~ styles.xml
  ~ AI Talent Marketplace
  ~ 
  ~ This file defines the application's themes and styles for the AI Talent Marketplace Android application.
  ~ It implements the design system with consistent styling across components while supporting
  ~ accessibility features like high contrast, color-blind friendly palette, and scalable text.
  ~
  ~ The theme supports light/dark mode switching through AppCompat's DayNight theming system.
  -->
<resources>
    <!-- Base application theme with DayNight support for automatic light/dark theming -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- Text and background colors -->
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:windowBackground">@color/background</item>
        
        <!-- System UI colors -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
    </style>

    <!-- Theme variant without action bar for full-screen experiences -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash screen theme applied during app startup -->
    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <!-- Theme overlay for app bars -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- Theme overlay for popups and menus -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Standard button style for consistency throughout the app -->
    <style name="Widget.App.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Headline text appearance style -->
    <style name="TextAppearance.App.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Body text appearance style -->
    <style name="TextAppearance.App.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Button text appearance style -->
    <style name="TextAppearance.App.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>