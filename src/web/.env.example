# This file serves as a template for configuring environment variables for local development, staging, and production environments.
# Copy this file to .env.local for local development.

# Application
# General application settings
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=AI Talent Marketplace
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ENVIRONMENT=development

# API Endpoints
# Backend service URLs
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_USER_SERVICE_URL=http://localhost:8001/api/v1
NEXT_PUBLIC_JOB_SERVICE_URL=http://localhost:8002/api/v1
NEXT_PUBLIC_PAYMENT_SERVICE_URL=http://localhost:8003/api/v1
NEXT_PUBLIC_COLLABORATION_SERVICE_URL=http://localhost:8004/api/v1
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:8005/api/v1

# Authentication
# Auth0 configuration
NEXT_PUBLIC_AUTH0_DOMAIN=your-auth0-domain.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-auth0-client-id
NEXT_PUBLIC_AUTH0_AUDIENCE=https://api.aitalentmarketplace.com
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_COOKIE_SECRET=your-cookie-secret-at-least-32-chars

# WebSocket
# Real-time communication configuration
NEXT_PUBLIC_SOCKET_SERVER_URL=ws://localhost:8000

# Stripe
# Payment processing configuration
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# OpenAI
# AI service integration
OPENAI_API_KEY=your-openai-api-key

# Analytics
# User analytics tracking
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Feature Flags
# Toggle features on/off
NEXT_PUBLIC_FEATURE_JUPYTER_NOTEBOOKS=true
NEXT_PUBLIC_FEATURE_AI_MATCHING=true
NEXT_PUBLIC_FEATURE_WORKSPACE_COLLABORATION=true

# File Storage
# S3 configuration for file uploads
NEXT_PUBLIC_S3_BUCKET=dev-aitalentmarketplace-uploads
NEXT_PUBLIC_S3_REGION=us-east-1

# Security
# Security-related settings
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key